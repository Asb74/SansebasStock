install! 'cocoapods', :warn_for_unused_master_specs_repo => false
platform :ios, '15.0'
$FirebaseSDKVersion = '10.24.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    alt = File.expand_path(File.join('Flutter', 'Generated.xcconfig'), __FILE__)
    if File.exist?(alt)
      generated_xcode_build_settings_path = alt
    else
      raise "#{generated_xcode_build_settings_path} must exist. Run 'flutter pub get' first."
    end
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  pod 'leveldb-library', '1.22'
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)

    target.build_configurations.each do |config|
      # 1) Limpiar el flag inválido "-GCC_WARN_INHIBIT_ALL_WARNINGS" en C y C++
      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS].each do |key|
        val = config.build_settings[key]
        case val
        when String
          val = val.gsub(/\s-?GCC_WARN_INHIBIT_ALL_WARNINGS\b/, ' ')
        when Array
          val = val.reject { |e| e =~ /^-?GCC_WARN_INHIBIT_ALL_WARNINGS$/ }
        end
        config.build_settings[key] = val
      end

      # 2) Forzar iOS 15.0 en Pods que lo tengan más bajo
      cur = config.build_settings['IPHONEOS_DEPLOYMENT_TARGET']
      if cur.nil? || cur.to_s.to_f < 15.0
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      end

      # BoringSSL/gRPC/abseil con toolchain moderno: C++17
      config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++17'
      other_cpp = config.build_settings['OTHER_CPLUSPLUSFLAGS'] || ['$(inherited)']
      other_cpp = Array(other_cpp)
      other_cpp << '-std=gnu++17'
      config.build_settings['OTHER_CPLUSPLUSFLAGS'] = other_cpp.uniq

      # Silenciar avisos de código viejo al compilar con toolchain actual
      other_cflags = config.build_settings['OTHER_CFLAGS'] || ['$(inherited)']
      other_cflags = Array(other_cflags)
      other_cflags << '-Wno-implicit-fallthrough'
      other_cflags << '-Wno-deprecated-declarations'
      config.build_settings['OTHER_CFLAGS'] = other_cflags.uniq

      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
      config.build_settings['PROVISIONING_PROFILE_SPECIFIER'] = ''
      config.build_settings['PROVISIONING_PROFILE'] = ''
      config.build_settings['CODE_SIGN_STYLE'] = 'Automatic'
    end

    if target.name == 'leveldb-library'
      target.build_configurations.each do |config|
        defs = Array(config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] || '$(inherited)')
        defs |= ['LEVELDB_PLATFORM_POSIX=1', 'HAVE_PTHREAD=1']
        config.build_settings['GCC_PREPROCESSOR_DEFINITIONS'] = defs
        config.build_settings['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++17'
        config.build_settings['CLANG_CXX_LIBRARY'] = 'libc++'
      end
    end
  end

  installer.aggregate_targets.each do |aggregate|
    aggregate.user_project.native_targets.each do |target|
      next unless target.name == 'Runner'

      target.build_configurations.each do |config|
        config.build_settings['CODE_SIGN_STYLE'] = 'Manual'
      end
    end
  end

  installer.pods_project.build_configurations.each do |config|
    config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = 'i386'
  end
end
