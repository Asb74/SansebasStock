# ios/Podfile

platform :ios, '13.0'
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  raise 'Generated.xcconfig must exist. Run "flutter pub get" first.' unless File.exist?(generated_xcode_build_settings_path)

  File.foreach(generated_xcode_build_settings_path) do |line|
    match = line.match(/FLUTTER_ROOT\=(.*)/)
    return match[1].strip if match
  end

  raise 'FLUTTER_ROOT not found in Generated.xcconfig. Run "flutter pub get" first.'
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  # Con iOS 13+ y Xcode 16, suele ser más estable usar linkage estática.
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

# Si tienes tests de Runner, puedes descomentar este bloque:
# target 'RunnerTests' do
#   inherit! :search_paths
# end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    # Ajustes extra de Flutter (bitcode off, Swift, etc.)
    flutter_additional_ios_build_settings(target)

    # --- FIX Codemagic / Xcode 16: leveldb necesita PLATFORM_POSIX ---
    if target.name == 'leveldb-library'
      target.build_configurations.each do |config|
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] ||= ['$(inherited)']
        # Fuerza la detección de plataforma POSIX en leveldb para que incluya port_stdcxx.h
        config.build_settings['OTHER_CPLUSPLUSFLAGS'] << '-DLEVELDB_PLATFORM_POSIX'
      end
    end

    # Asegura que los Pods NO intenten firmar (la firma es solo del target Runner)
    target.build_configurations.each do |config|
      config.build_settings['CODE_SIGNING_ALLOWED'] = 'NO'
      config.build_settings['CODE_SIGNING_REQUIRED'] = 'NO'
      config.build_settings['EXPANDED_CODE_SIGN_IDENTITY'] = ''
      config.build_settings['CODE_SIGNING_STYLE'] = 'Automatic'
      # Evita que ningún Pod tenga provisioning profile
      config.build_settings['PROVISIONING_PROFILE_SPECIFIER'] = ''
      config.build_settings['PROVISIONING_PROFILE'] = ''
    end
  end
end
