install! 'cocoapods', :warn_for_unused_master_specs_repo => false
# Uncomment this line to define a global platform for your project
platform :ios, '15.0'
$FirebaseSDKVersion = '10.24.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    alt = File.expand_path(File.join('Flutter', 'Generated.xcconfig'), __FILE__)
    if File.exist?(alt)
      generated_xcode_build_settings_path = alt
    else
      raise "#{generated_xcode_build_settings_path} must exist. Run 'flutter pub get' first."
    end
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      bs = config.build_settings

      %w[OTHER_CFLAGS OTHER_CPLUSPLUSFLAGS OTHER_LDFLAGS GCC_PREPROCESSOR_DEFINITIONS].each do |key|
        value = (bs[key] || '').to_s
        value = value.gsub(/\A-?G(\s+|$)/, '')
                     .gsub(/(\s+)-G(\s+|$)/, ' ')
                     .strip
        bs[key] = value
      end

      # --- Estándares modernos por defecto (Xcode 16) ---
      bs['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      bs['GCC_C_LANGUAGE_STANDARD']    = 'gnu11'
      bs['CLANG_CXX_LANGUAGE_STANDARD'] = 'gnu++17'
      bs['CLANG_CXX_LIBRARY']          = 'libc++'
      bs['GCC_TREAT_WARNINGS_AS_ERRORS'] = 'NO'

      if target.name == 'leveldb-library'
        defs = Array(bs['GCC_PREPROCESSOR_DEFINITIONS'] || '$(inherited)')
        defs |= ['LEVELDB_PLATFORM_POSIX=1', 'HAVE_PTHREAD=1']
        bs['GCC_PREPROCESSOR_DEFINITIONS'] = defs

        hs = Array(bs['HEADER_SEARCH_PATHS'] || '$(inherited)')
        hs |= ['${PODS_ROOT}/leveldb-library', '${PODS_ROOT}/leveldb-library/include']
        bs['HEADER_SEARCH_PATHS'] = hs

        bs['CODE_SIGNING_ALLOWED'] = 'NO'
        bs['CODE_SIGNING_REQUIRED'] = 'NO'
        bs['CODE_SIGN_STYLE'] = 'Automatic'
      end

      if target.name != 'Runner'
        bs['CODE_SIGNING_ALLOWED'] = 'NO'
        bs['CODE_SIGNING_STYLE'] = 'Automatic'
        bs['CODE_SIGNING_REQUIRED'] = 'NO'
        %w[PROVISIONING_PROFILE_SPECIFIER PROVISIONING_PROFILE DEVELOPMENT_TEAM CODE_SIGN_IDENTITY].each do |k|
          bs.delete(k)
        end
      end

      # Targets más sensibles (forzar extra)
      if ['leveldb-library',
          'FirebaseFirestore',
          'FirebaseFirestoreInternal',
          'FirebaseCoreInternal',
          'gRPC-Core',
          'gRPC-C++',
          'abseil'].include?(target.name)
        cxx = (bs['OTHER_CPLUSPLUSFLAGS'] || '').to_s
        cxx = cxx.gsub(/\s-std=[^ \t]+/, '')
        cxx = (cxx + ' -std=gnu++17 -stdlib=libc++').strip
        bs['OTHER_CPLUSPLUSFLAGS'] = cxx

        warn = (bs['WARNING_CFLAGS'] || '').to_s
        warn = warn.gsub(/\s-Werror\b/, '')
        bs['WARNING_CFLAGS'] = warn.strip

        c = (bs['OTHER_CFLAGS'] || '').to_s
        %w[-Wno-c++11-narrowing -Wno-range-loop-analysis -Wno-deprecated-declarations].each do |flag|
          c += " #{flag}" unless c.include?(flag)
        end
        bs['OTHER_CFLAGS'] = c.strip
      end
    end
  end
end
